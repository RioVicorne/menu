{
  "name": "sales-management-system",
  "version": "1.0.0",
  "description": "Hệ thống quản lý bán hàng",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"bun run server\" \"bun run client\"",
    "server": "cd server && bun run dev",
